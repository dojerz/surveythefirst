@model List<FirstLook.Models.Base>

<table id="FilterTable">
    <thead>
        <tr>
            <th>
                Megnevezés
            </th>
            <th>
                Település
            </th>
            <th>
                Építmény típusa
            </th>
            <th>
                Átviteli technológia
            </th>
            <th>
                Kapacitás
            </th>
            <th>
                Talajszint feletti magasság (m)
            </th>
            <th>
                Távolság (km)
            </th>
            <th>
                Irányszög
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.ID" baseID="@item.BaseID" lat="@item.WgsLAT" lon="@item.WgsLON" class="unSelected" onclick="bases.baseTableEvent(this)">
                <td>
                    @item.Name
                </td>
                <td>
                    @item.SelectedSettlementName
                </td>
                <td>
                    @item.SelectedBuildingTypeName
                </td>
                <td>
                    @item.Transmission
                </td>
                <td>
                    @item.Capacity
                </td>
                <td>
                    @item.Altitude
                </td>
                <td>
                    @item.distanceFromSurveyPoint
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="docs-gallery">
    @foreach (var item in Model)
    {
        <ul id="@item.BaseID" class="near">

            @foreach (var nearPic in item.NearPictures)
            {
                var base64 = Convert.ToBase64String(nearPic.ThumbNailContent);
                var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
                <li>
                    <img src=@imgSrc data-original="@Url.Action("GetOriginalPicture", "BaseController", new { baseID = nearPic.BaseID ,name = nearPic.Name })">
                </li>
            }

        </ul>
        <ul id="@item.BaseID" class="far">
            @foreach (var farPic in item.FarPictures)
            {
                var base64 = Convert.ToBase64String(farPic.ThumbNailContent);
                var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
                <li>
                    <img src=@imgSrc data-original="@Url.Action("GetOriginalPicture", "BaseController", new { baseID = farPic.BaseID ,name = farPic.Name })">
                </li>
            }
        </ul>
    }
</div>


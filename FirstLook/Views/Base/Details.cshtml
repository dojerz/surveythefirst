        </dt>
        <dd>
            @Html.DisplayFor(model => model.Altitude)
        </dd>

        <dt>
            @Html.DisplayName("WgsLAT")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WgsLAT)
        </dd>

        <dt>
            @Html.DisplayName("WgsLON")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WgsLON)

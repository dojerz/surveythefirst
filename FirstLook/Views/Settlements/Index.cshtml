@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<FirstLook.Settlements>

<h1>Települések:</h1>
@Html.ActionLink("Új hozzáadása", "Create", "Settlements")
<table>
    <tr>
        <th>
            Település neve
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Settlement
            </td>
            <td>
                @Html.ActionLink("Módosítás", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Törlés", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>



